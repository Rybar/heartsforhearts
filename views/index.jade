extends layout

block content
    h1= title
    p SACH Hearts for Hearts 
    #userHeart
        div.heart
            span A
        
    // ADD HEART
    h2 Add Heart
    #addHeart
        fieldset
            input#inputDonationAmount(type='text', placeholder='Donation Amount')
            input#inputUserEmail(type='text', placeholder='Email')
            input#inputUserEmail(type='text', placeholder='Email')
            input#inputUserFullname(type='text', placeholder='Full Name')
            input#inputUserInitials(type='text', placeholder='Initials')
            input#inputMessage(type='text', placeholder='Your custom message')
            select#inputCurrency
                option USD
                option GBP
                option AUD
                option CAD
                option EUR
                option HKD
                option SGD
            select#inputColor
                option blue
                option lightblue
                option green
                option gold
                option orange
                option red
                option pink
                option purple
            select#inputHeartstyle
                option A
                option B
                option C
            br
            button#btnAddUser DONATE

        
        
    // /ADD HEART        
        
        
    // Wrapper
    #wrapper

        // USER INFO
        #heartInfo
            h2 Heart Info
            p
                strong Empty?:
                |  <span id='userInfoEmpty'></span>
                br
                strong Email:
                |  <span id='userInfoEmail'></span>
                br
                strong Your Name:
                |  <span id='userInfoFullName'></span>
                br
                strong Your Initials:
                |  <span id='userInfoInitials'></span>
                br
                strong Anonymous?:
                |  <span id='userInfoAnonymous'></span>
                br
                strong Donation Amount:
                |  <span id='userInfoDonationAmount'></span>
                br
                strong Message:
                |  <span id='userInfoInputMessage'></span>
                br
                strong Currency:
                |  <span id='userInfoCurrency'></span>
                br
                strong Color:
                |  <span id='userInfoColor'></span>
                br
                strong Style:
                |  <span id='userInfoHeartstyle'></span>
        // /USER INFO

        // USER LIST
        h2 Heart List
        #heartList
            table
                thead
                    th User Name
                    th Email
                    th Donation Amount
                    th Heart Color
                    th Heart Style
                    th Delete?
                tbody
        // /USER LIST



    // /WRAPPER