doctype html
html
    head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge')
      meta(name='viewport', content='width=device-width, initial-scale=1')    
      title= title
      link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
      link(rel='stylesheet', href='/stylesheets/hearts.css')
      link(rel='stylesheet', href='/stylesheets/modalForms.css')
        
    body.heartsBG
      nav.navbar.navbar-default.navbar-fixed-top#navigationBar(role="navigation")
        div.container-fluid
          div.navbar-header
            button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='change ') SACH   
          div.navbar-collapse.collapse#navbar
            ul.nav.navbar-nav.navbar-right
              li
                a(href="http://www.saveachildsheart.com/") About
              li
                a(href="") Contact
        // div.progress
        //   div.progress-bar.progress-bar-success.progress-bar-striped.active(role='progressbar', aria-valuenow='0', aria-valuemin='0', aria-valuemax='10000', style='width: 0%')
        //     span.sr-only 
      div.container
        div.jumbotron
            h1 Hearts for Hearts
            p Heart Donation Text
            button.donate#centerDonate DONATE
      block content
        div#container
      div.modal.fade.bs-example-modal-lg#myModal(tabindex='-1', role='dialog', aria-labelledby='myLargeModalLabel', aria-hidden='true')
        div.modal-dialog.modal-lg
          div.modal-content
            div#donationGreeting(aria-hidden='false')
              button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') ×            
              div#heartContent
                div#clickedHeartPic
                p#heartBelongs Test Belong Field
                p#donationAmountCounter Test  Donation amount:
                p#donationAmount Test $$
                p#donationMessage Our thoughts are with you and your family
              p Claim a heart on the wall by donating
              button#greetingTransfer Donate
            div#donationCallToAction(aria-hidden='true')
              div.modal-body
                div.container-fluid
                  div.row
                    div.col-md-6
                      button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') ×                      
                      p Left Div
                      div#heartScrollers
                        //p#heartPreview A
                        div.heart.blue.epic.activate#heartPreview
                          span B
                        p.leftDesign >
                        p.rightDesign <
                        p.leftDesign prev. heart style
                        p.rightDesign next heart style
                      p Clicking continue will take you to our JustGiving fundraising page to complete your donation. You will be returned here after completing the transaction
                      #colorselector
                        #blueselector.blue.colorbars
                        #lightblueselector.lightblue.colorbars
                        #greenselector.green.colorbars
                        #goldselector.gold.colorbars
                        #orangeselector.orange.colorbars
                        #redselector.red.colorbars
                        #pinkselector.pink.colorbars
                        #purpleselector.purple.colorbars
                    div.col-md-6
                      p Right Div
                      form(name='donation', action='', onsubmit='onSubmit()')
                        input#nameInfo(placeholder='Name', name='recipient')
                        br
                        input#messageInfo(placeholder="Message to child or child's family", name='message')
                        br
                        input#emailInfo(placeholder='email', name='email')
                        br
                        input#donationInfo(placeholder='Donation Amt', name='amount')
                        select#currencyInfo
                          option(value='', disabled='', selected='') Currency
                          option(value='GBP') British Pound(GBP)
                          option(value='AUD') Australian Dollar (AUD)
                          option(value='CAD') Canadian dollar (CAD)
                          option(value='EUR') Euro (EUR)
                          option(value='HKD') Hong Kong Dollar  (HKD)
                          option(value='SGD') Singapore Dollar (SGD)
                        input#submit(type='button', value='Continue', onclick='submitForm();')


      
      
      
      script(src='/javascripts/jquery.min.js')
      script(src='/javascripts/bootstrap.min.js')
      script(src='/javascripts/packery.pkgd.min.js')
      script(src='/javascripts/velocity.min.js')
      script(src='/javascripts/jquery.bootstrap-autohidingnavbar.min.js')
      // script(src='/javascripts/global.js')
      script(src='/javascripts/hearts.js')
      script(src='/javascripts/modalJs.js')

  

      
        